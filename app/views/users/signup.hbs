<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<div class="container">
    {{#if Status}}
        Пользователь зарегистрирован
    {{else}}
        <div class="card bg-light">
            <article class="card-body mx-auto" style="max-width: 400px;">
                <h4 class="card-title mt-3 text-center">Регистрация</h4>
                <form id="registration-form" method="POST">
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input name="Name" class="form-control {{#if ValidationErrors.Name}}is-invalid{{else}}is-valid{{/if}}" placeholder="имя" type="text" value="{{Request.body.Name}}">
                        {{#if ValidationErrors.Name}}
                            <div class="invalid-feedback">{{ValidationErrors.Name}}</div>
                        {{/if}}
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <input name="Email" class="form-control {{#if ValidationErrors.Email}}is-invalid{{else}}is-valid{{/if}}" placeholder="e-mail" type="text" value="{{Request.body.Email}}">
                        {{#if ValidationErrors.Email}}
                            <div class="invalid-feedback">{{ValidationErrors.Email}}</div>
                        {{/if}}
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                        </div>
                        <input name="Phone" class="form-control {{#if ValidationErrors.Phone}}is-invalid{{else}}is-valid{{/if}}" placeholder="номер телефона" type="text" value="{{Request.body.Phone}}" >
                        {{#if ValidationErrors.Phone}}
                            <div class="invalid-feedback">{{ValidationErrors.Phone}}</div>
                        {{/if}}
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="Password" class="form-control {{#if ValidationErrors.Password}}is-invalid{{else}}is-valid{{/if}}" placeholder="придумайте пароль" type="password">
                        {{#if ValidationErrors.Password}}
                            <div class="invalid-feedback">{{ValidationErrors.Password}}</div>
                        {{/if}}
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="RepeatPassword" class="form-control {{#if ValidationErrors.RepeatPassword}}is-invalid{{else}}is-valid{{/if}}" placeholder="повторите пароль" type="password">
                        {{#if ValidationErrors.RepeatPassword}}
                            <div class="invalid-feedback">{{ValidationErrors.RepeatPassword}}</div>
                        {{/if}}
                    </div> <!-- form-group// -->                                      
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Регистрация </button>
                    </div> <!-- form-group// -->      
                    <p class="text-center">Уже зарегистрированы? <a href="">Войти</a> </p>
                </form>
            </article>
        </div> <!-- card.// -->
    {{/if}}
</div> 
<!--container end.//-->
<br><br>
<article class="bg-secondary mb-3">  
    <div class="card-body text-center">
        <h3 class="text-white mt-3">Спасибо, что посетили наш сайт</h3>
    </div>
    <br><br>
</article>