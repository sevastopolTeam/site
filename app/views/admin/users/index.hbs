<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<br/>
{{> pagination url="/admin/users" label="Users"}}

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th> {{I18.Table.Th.Actions}} </th>
            <th> {{I18.Table.Th.Name}} </th>
            <th> {{I18.Table.Th.Email}} </th>
        </tr>
    </thead>
    {{#each Users}}
        <tr>
            <td>
                <a href="/admin/users/{{this.Id}}" title="{{../I18.Table.Tr.Actions.View}}">
                    <i class="fas fa-eye"></i>
                </a> 
                <a href="/admin/users/{{this.Id}}/edit" title="{{../I18.Table.Tr.Actions.Edit}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/admin/user_delete/{{this.Id}}?page={{../Pagination.Current}}" title="{{../I18.Table.Tr.Actions.Delete}}">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
            <td> {{Name}} </td>
            <td> {{Email}} </td>
        </tr>
    {{/each}}
</table>
