<script>
    $( function() {
        $("#TranslationId").autocomplete({
            source: "/admin/translations_by_name",
            delay: 500,
            minLenght: 2
        });
    });
</script>
 

<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">{{I18.Title}} {{WordCategoryName}}</h4>
            <form id="registration-form" method="POST">
                <input type="hidden" value="{{Form.WordCategoryId}}" name="WordCategoryId"/>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input id="TranslationId" name="TranslationId" class="form-control {{#if ValidationErrors.TranslationId}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.TranslationId}}" type="text" value="{{Form.TranslationId}}">
                    {{#if ValidationErrors.TranslationId}}
                        <div class="invalid-feedback">{{ValidationErrors.TranslationId}}</div>
                    {{/if}}
                </div>

                {{> submit Title=I18.Buttons.Submit}} 
            </form>
        </article>
    </div> <!-- card.// -->
</div>

