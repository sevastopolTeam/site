<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<table border="1px">
    <tr>
        <td> {{I18.Table.Titles.Name}} </td>
        <td> {{WordCategory.Name}} </td>
    </tr>
</table>

<br/>
{{> pagination url="/admin/word_categories/{{this.Id}}" label="Translations"}}
{{> button Title=I18.Buttons.New Link=AddTranslationLink}}

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th> {{I18.TableTranslations.Th.Actions}} </th>
            <th> {{I18.TableTranslations.Th.Translation}} </th>
        </tr>
    </thead>
    {{#each Translations}}
        <tr>
            <td>
                <a href="/admin/word_categories/{{this.Id}}" title="{{../I18.TableTranslations.Tr.Actions.View}}">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="/admin/word_category_delete/{{this.Id}}?page={{../Pagination.Current}}" title="{{../I18.TableTranslations.Tr.Actions.Delete}}">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
            <td> {{this.TranslationId}} </td>
        </tr>
    {{/each}}
</table>
