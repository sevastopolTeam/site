<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">{{I18.Title}}</h4>
            <form id="registration-form" method="POST">
                <input type="hidden" value="{{Form.Id}}" name="Id"/>
                {{> input Field="Russian" ValidationError=ValidationErrors.Russian Title=I18.Inputs.Russian Value=Form.Russian}}
                {{> input Field="English" ValidationError=ValidationErrors.English Title=I18.Inputs.English Value=Form.English}}
                {{> input Field="PartOfSpeech" ValidationError=ValidationErrors.PartOfSpeech Title=I18.Inputs.PartOfSpeech Value=Form.PartOfSpeech}}
                {{> input Field="Frequency" ValidationError=ValidationErrors.Frequency Title=I18.Inputs.Frequency Value=Form.Frequency}}
                {{> input Field="OriginUrl" ValidationError=ValidationErrors.OriginUrl Title=I18.Inputs.OriginUrl Value=Form.OriginUrl}}
                {{> input Field="DownloadUrl" ValidationError=ValidationErrors.DownloadUrl Title=I18.Inputs.DownloadUrl Value=Form.DownloadUrl}}
                {{> checkbox Field="IsChecked" Title=I18.Inputs.IsChecked Value=Form.IsChecked}}

                {{> submit Title=I18.Buttons.Submit}}
            </form>
        </article>
    </div> <!-- card.// -->
</div>