<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">{{I18.Title}}</h4>
            <form id="registration-form" method="POST">
                <input type="hidden" value="{{Request.body.Id}}" name="Id"/>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="ValueFrom" class="form-control {{#if ValidationErrors.ValueFrom}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.ValueFrom}}" type="text" value="{{Request.body.ValueFrom}}">
                    {{#if ValidationErrors.ValueFrom}}
                        <div class="invalid-feedback">{{ValidationErrors.ValueFrom}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="ValueTo" class="form-control {{#if ValidationErrors.ValueTo}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.ValueTo}}" type="text" value="{{Request.body.ValueTo}}">
                    {{#if ValidationErrors.ValueTo}}
                        <div class="invalid-feedback">{{ValidationErrors.ValueTo}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="LanguageFrom" class="form-control {{#if ValidationErrors.LanguageFrom}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.LanguageFrom}}" type="text" value="{{Request.body.LanguageFrom}}">
                    {{#if ValidationErrors.LanguageFrom}}
                        <div class="invalid-feedback">{{ValidationErrors.LanguageFrom}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="LanguageTo" class="form-control {{#if ValidationErrors.LanguageTo}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.LanguageTo}}" type="text" value="{{Request.body.LanguageTo}}">
                    {{#if ValidationErrors.LanguageTo}}
                        <div class="invalid-feedback">{{ValidationErrors.LanguageTo}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="PartOfSpeech" class="form-control {{#if ValidationErrors.PartOfSpeech}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.PartOfSpeech}}" type="text" value="{{Request.body.PartOfSpeech}}">
                    {{#if ValidationErrors.PartOfSpeech}}
                        <div class="invalid-feedback">{{ValidationErrors.PartOfSpeech}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="Frequency" class="form-control {{#if ValidationErrors.Frequency}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.Frequency}}" type="text" value="{{Request.body.Frequency}}">
                    {{#if ValidationErrors.Frequency}}
                        <div class="invalid-feedback">{{ValidationErrors.Frequency}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="OriginUrl" class="form-control {{#if ValidationErrors.OriginUrl}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.OriginUrl}}" type="text" value="{{Request.body.OriginUrl}}">
                    {{#if ValidationErrors.OriginUrl}}
                        <div class="invalid-feedback">{{ValidationErrors.OriginUrl}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="DownloadUrl" class="form-control {{#if ValidationErrors.DownloadUrl}}is-invalid{{else}}is-valid{{/if}}" placeholder="{{I18.Inputs.DownloadUrl}}" type="text" value="{{Request.body.DownloadUrl}}">
                    {{#if ValidationErrors.DownloadUrl}}
                        <div class="invalid-feedback">{{ValidationErrors.DownloadUrl}}</div>
                    {{/if}}
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input type="checkbox" name="IsChecked" {{#if Request.body.IsChecked}}checked{{/if}}/> {{I18.Inputs.IsChecked}}
                </div> <!-- form-group// -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> {{I18.Buttons.Submit}} </button>
                </div> <!-- form-group// -->
            </form>
        </article>
    </div> <!-- card.// -->
</div> 
<!--container end.//-->
<br><br>
<article class="bg-secondary mb-3">  
    <div class="card-body text-center">
        <h3 class="text-white mt-3">Test</h3>
    </div>
    <br><br>
</article>