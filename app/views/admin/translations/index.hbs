<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<br/>
{{> pagination url="/admin/translations" label="Translations"}}
{{> button Title=I18.Buttons.New Link="/admin/translation_add"}}

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th> {{I18.Table.Th.Actions}} </th>
            <th> {{I18.Table.Th.Russian}} </th>
            <th> {{I18.Table.Th.English}} </th>
            <th> {{I18.Table.Th.PartOfSpeech}} </th>
            <th> {{I18.Table.Th.Frequency}} </th>
            <th> {{I18.Table.Th.DownloadUrl}} </th>
            <th> {{I18.Table.Th.OriginUrl}} </th>
            <th> {{I18.Table.Th.IsChecked}} </th>
        </tr>
    </thead>
    {{#each Translations}}
        <tr>
            <td>
                <a href="/admin/translations/{{this.Id}}" title="{{../I18.Table.Tr.Actions.View}}">
                    <i class="fas fa-eye"></i>
                </a> 
                <a href="/admin/translations/{{this.Id}}/edit" title="{{../I18.Table.Tr.Actions.Edit}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/admin/translation_delete/{{this.Id}}?page={{../Pagination.Current}}" title="{{../I18.Table.Tr.Actions.Delete}}">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
            <td> {{Russian}} </td>
            <td> {{English}} </td>
            <td> {{PartOfSpeech}} </td>
            <td> {{Frequency}} </td>
            <td> {{DownloadUrl}} </td>
            <td> {{OriginUrl}} </td>
            <td> {{IsChecked}} </td>
        </tr>
    {{/each}}
</table>
