<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<br/>
<nav aria-label="Translations navigation">
  <ul class="pagination">
    <li class="page-item {{#isEqual Pagination.Previous undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.First}}">{{I18.Pagination.Begin}}</a>
    </li>
    <li class="page-item {{#isEqual Pagination.Previous undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.Previous}}">{{I18.Pagination.Previous}}</a>
    </li>
    {{#isNotEqual Pagination.BeforePrevious undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.BeforePrevious}}">{{Pagination.BeforePrevious}}</a>
    </li>
    {{/isNotEqual}}
    {{#isNotEqual Pagination.Previous undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.Previous}}">{{Pagination.Previous}}</a>
    </li>
    {{/isNotEqual}}
    <li class="page-item active">
        <a class="page-link" href="/admin/translations?page={{Pagination.Current}}">{{Pagination.Current}}</a>
    </li>
    {{#isNotEqual Pagination.Next undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.Next}}">{{Pagination.Next}}</a>
    </li>
    {{/isNotEqual}}
    {{#isNotEqual Pagination.AfterNext undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.AfterNext}}">{{Pagination.AfterNext}}</a>
    </li>
    {{/isNotEqual}}
    <li class="page-item {{#isEqual Pagination.Next undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.Next}}">{{I18.Pagination.Next}}</a>
    </li>
    <li class="page-item {{#isEqual Pagination.Next undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.Last}}">{{I18.Pagination.End}}</a>
    </li>
  </ul>
</nav>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th> {{I18.Table.Th.Actions}} </th>
            <th> {{I18.Table.Th.ValueFrom}} </th>
            <th> {{I18.Table.Th.ValueTo}} </th>
            <!-- <th> {{I18.Table.Th.LanguageFrom}} </th> -->
            <!-- <th> {{I18.Table.Th.LanguageTo}} </th> -->
            <th> {{I18.Table.Th.PartOfSpeech}} </th>
            <th> {{I18.Table.Th.DownloadUrl}} </th>
            <th> {{I18.Table.Th.OriginUrl}} </th>
        </tr>
    </thead>
    {{#each Translations}}
        <tr>
            <td>
                <a href="/admin/translations/{{this.Id}}" title="{{../I18.Table.Tr.Actions.View}}">
                    <i class="fas fa-eye"></i>
                </a> 
                <a href="/admin/translations/{{this.Id}}/edit" title="{{../I18.Table.Tr.Actions.Edit}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/admin/translation_delete/{{this.Id}}?page={{../CurrentPage}}" title="{{../I18.Table.Tr.Actions.Delete}}">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
            <td> {{ValueFrom}} </td>
            <td> {{ValueTo}} </td>
            <!-- <td> {{LanguageFrom}} </td> -->
            <!-- <td> {{LanguageTo}} </td> -->
            <td> {{PartOfSpeech}} </td>
            <td> {{DownloadUrl}} </td>
            <td> {{OriginUrl}} </td>
        </tr>
    {{/each}}
</table>
