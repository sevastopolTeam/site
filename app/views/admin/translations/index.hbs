<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<br/>
<nav aria-label="Translations navigation">
  <ul class="pagination">
    <li class="page-item {{#isEqual Pagination.Previous undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.First}}">Начало</a>
    </li>
    <li class="page-item {{#isEqual Pagination.Previous undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.Previous}}">Предыдущая</a>
    </li>
    {{#isNotEqual Pagination.BeforePrevious undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.BeforePrevious}}">{{Pagination.BeforePrevious}}</a>
    </li>
    {{/isNotEqual}}
    {{#isNotEqual Pagination.Previous undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.Previous}}">{{Pagination.Previous}}</a>
    </li>
    {{/isNotEqual}}
    <li class="page-item active">
        <a class="page-link" href="/admin/translations?page={{Pagination.Current}}">{{Pagination.Current}}</a>
    </li>
    {{#isNotEqual Pagination.Next undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.Next}}">{{Pagination.Next}}</a>
    </li>
    {{/isNotEqual}}
    {{#isNotEqual Pagination.AfterNext undefined}}
    <li class="page-item">
        <a class="page-link" href="/admin/translations?page={{Pagination.AfterNext}}">{{Pagination.AfterNext}}</a>
    </li>
    {{/isNotEqual}}
    <li class="page-item {{#isEqual Pagination.Next undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.Next}}">Следующая</a>
    </li>
    <li class="page-item {{#isEqual Pagination.Next undefined}}disabled{{/isEqual}}">
        <a class="page-link" href="/admin/translations?page={{Pagination.Last}}">Конец</a>
    </li>
  </ul>
</nav>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th> Действия </th>
            <th> Слово </th>
            <th> Перевод </th>
            <!-- <th> Исходный язык </th> -->
            <!-- <th> Язык перевода </th> -->
            <th> Ссылка для отображения </th>
            <th> Исходная ссылка </th>
        </tr>
    </thead>
    {{#each Translations}}
        <tr>
            <td>
                <a href="/admin/translations/{{this.Id}}" title="Просмотр">
                    <i class="fas fa-eye"></i>
                </a> 
                <a href="/admin/translations/{{this.Id}}/edit" title="Редактирование">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/admin/translation-delete/{{this.Id}}?page={{../CurrentPage}}" title="Удаление">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
            <td> {{this.ValueFrom}} </td>
            <td> {{this.ValueTo}} </td>
            <!-- <td> {{this.LanguageFrom}} </td> -->
            <!-- <td> {{this.LanguageTo}} </td> -->
            <td> {{this.DownloadUrl}} </td>
            <td> {{this.OriginUrl}} </td>
        </tr>
    {{/each}}
</table>
